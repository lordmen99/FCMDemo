<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Token"
        android:id="@+id/getToken"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="getToken"/>

    <TextView
        android:id="@+id/printToken"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Token"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getToken" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subscribe to Sports"
        android:layout_marginTop="32dp"
        android:id="@+id/btnSubSports"
        app:layout_constraintTop_toBottomOf="@+id/printToken"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="subsSports"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UnSubscribe to Sports"
        android:id="@+id/btnUnSubSports"
        app:layout_constraintTop_toBottomOf="@+id/btnSubSports"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="unsubsSports"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subscribe to Entertainment"
        android:id="@+id/btnSubEnt"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/btnUnSubSports"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="subsEnt"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UnSubscribe to Entertainment"
        android:id="@+id/btnUnSubEnt"
        app:layout_constraintTop_toBottomOf="@+id/btnSubEnt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="unsubsEnt"/>

</androidx.constraintlayout.widget.ConstraintLayout>